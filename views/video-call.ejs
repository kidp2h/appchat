        <title>Video Call App Chat</title>
    </head>
    <body>
        <input type="hidden" id="userId" value="<%=user._id%>">
        <div class="main">
            <div class="tab-content" id="nav-tabContent">
                <!-- Start of Babble -->
                <div class="babble tab-pane fade active show tabChat" id="list-chat" role="tabpanel" aria-labelledby="list-chat-list">
        <div class="call" id="call1" style="position:relative">
            <video id="userVideo" width="200" height="200" userId="<%=data.userId%>" style="position:absolute;top:0;left:10"></video>
            <div class="content">
                <div class="container">

                    <div class="col-md-12">

                        <div class="inside">
                            <div class="panel">
                                <!-- <div class="participant">
                                    <img class="avatar-xxl avatarInCall" src="/images/avatars/avatar-female-5.jpg" alt="avatar">
                                    <span>Connecting</span>
                                </div> -->
                                <div class="options">
                                    <button class="btn option call-end back" name="1"><i class="material-icons md-30">call_end</i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <video id="contactVideo" width="200" height="200" contactId ="<%=data.contactId%>"style="position: absolute;bottom: 0;right: 0;"></video>

        </div>
    </div>
</div>
</div>
